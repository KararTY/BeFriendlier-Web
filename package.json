{
  "name": "befriendlier-web",
  "version": "0.5.2",
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run build-server",
    "build-server": "node ace build --production",
    "build-css": "sass resources/sass/style.scss public/css/stylesheet.css --style compressed",
    "build-js": "parcel build resources/js/index.ts --dist-dir public/js/ --detailed-report",
    "start": "node server.js",
    "dev": "node ace serve --watch --node-args=\"--inspect\"",
    "lint": "ts-standard",
    "format": "ts-standard --fix",
    "migrate:rollback": "npm run build-server && node ace migration:rollback",
    "migrate:run": "npm run build-server && node ace migration:run",
    "seed": "npm run build-server && node ace db:seed",
    "m:s": "node ace migration:run && node ace db:seed",
    "r:m:s": "npm run build-server && node ace migration:rollback && node ace migration:run && node ace db:seed",
    "release": "standard-version",
    "update": "git pull && npm i && npm run build && pm2 restart Web"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.2",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.2.1",
    "@types/feather-icons": "^4.7.0",
    "@types/ws": "^8.5.3",
    "@types/yeast": "^0.1.1",
    "adonis-preset-ts": "^2.1.0",
    "pino-pretty": "=7.2.0",
    "sass": "^1.55.0",
    "standard-version": "^9.5.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.4",
    "youch": "^3.2.2",
    "youch-terminal": "^2.1.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.2",
    "@adonisjs/core": "^5.8.6",
    "@adonisjs/lucid": "^18.1.1",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/shield": "^7.1.0",
    "@adonisjs/view": "^6.2.0",
    "@faker-js/faker": "^7.5.0",
    "babel-preset-solid": "^1.5.7",
    "befriendlier-shared": "git+https://github.com/kararty/befriendlier-shared.git#semver:^6.4.2",
    "bulma": "^0.9.4",
    "feather-icons": "^4.29.0",
    "p-queue": "=6.6.2",
    "parcel": "^2.7.0",
    "pg": "^8.8.0",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "secure-json-parse": "^2.5.0",
    "solid-js": "^1.5.7",
    "source-map-support": "^0.5.21",
    "uhtml": "^3.1.0",
    "ws": "^8.9.0",
    "yeast": "^0.1.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  }
}
