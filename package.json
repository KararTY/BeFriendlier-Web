{
  "name": "befriendlier-web",
  "version": "0.3.3",
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run build-server",
    "build-server": "node ace build --production",
    "build-css": "node-sass resources/sass/style.scss public/css/stylesheet.css --output-style compressed",
    "build-js": "parcel build resources/js/Index.ts --dist-dir public/js/ --detailed-report",
    "start": "node server.js",
    "dev": "node ace serve --watch --node-args=\"--inspect\"",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "migrate:rollback": "npm run build && node ace migration:rollback",
    "migrate:run": "npm run build-server && node ace migration:run",
    "seed": "npm run build-server && node ace db:seed",
    "m:s": "node ace migration:run && node ace db:seed",
    "r:m:s": "npm run build-server && node ace migration:rollback && node ace migration:run && node ace db:seed",
    "release": "standard-version",
    "update": "git pull && pnpm i --shamefully-hoist && npm run build && pm2 restart Web"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.0.1",
    "adonis-preset-ts": "^1.0.4",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-adonis": "^1.0.15",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "pino-pretty": "^4.3.0",
    "sqlite3": "^5.0.0",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.5",
    "youch": "^2.1.1",
    "youch-terminal": "^1.0.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^5.0.2",
    "@adonisjs/core": "^5.0.4-preview-rc-2",
    "@adonisjs/lucid": "^9.0.3",
    "@adonisjs/repl": "^1.1.5",
    "@adonisjs/session": "^4.0.5",
    "@adonisjs/shield": "^4.0.2",
    "@adonisjs/view": "^3.0.7",
    "@hapi/bourne": "^2.0.0",
    "@types/ws": "^7.2.9",
    "befriendlier-shared": "kararty/BeFriendlier-Shared#dev",
    "bulma": "^0.9.1",
    "feather-icons": "^4.28.0",
    "kontra": "^7.1.2",
    "node-sass": "^4.14.1",
    "p-queue": "^6.6.2",
    "parcel": "^2.0.0-nightly.435",
    "pg": "^8.4.1",
    "phc-argon2": "^1.0.11",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "uhtml": "^2.1.2",
    "ws": "^7.3.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  }
}
