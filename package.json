{
  "name": "befriendlier-web",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run build-server",
    "build-server": "node ace build --production",
    "build-css": "node-sass resources/sass/style.scss public/css/stylesheet.css --output-style compressed",
    "build-js": "parcel build resources/js/Index.ts --dist-dir public/js/ --detailed-report",
    "start": "node server.js",
    "dev": "node ace serve --watch --node-args=\"--inspect\"",
    "lint": "ts-standard",
    "format": "ts-standard --fix",
    "migrate:rollback": "npm run build-server && node ace migration:rollback",
    "migrate:run": "npm run build-server && node ace migration:run",
    "seed": "npm run build-server && node ace db:seed",
    "m:s": "node ace migration:run && node ace db:seed",
    "r:m:s": "npm run build-server && node ace migration:rollback && node ace migration:run && node ace db:seed",
    "release": "standard-version",
    "update": "git pull && npm i && npm run build && pm2 restart Web"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.7",
    "@types/feather-icons": "^4.7.0",
    "@types/ws": "^8.5.3",
    "@types/yeast": "^0.1.1",
    "adonis-preset-ts": "^2.1.0",
    "pino-pretty": "=7.2.0",
    "standard-version": "^9.3.2",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.3",
    "youch": "^3.1.1",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.1.0",
    "@adonisjs/core": "^5.7.5",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/repl": "^3.1.10",
    "@adonisjs/session": "^6.2.2",
    "@adonisjs/shield": "^7.0.10",
    "@adonisjs/view": "^6.1.3",
    "@faker-js/faker": "^6.1.2",
    "befriendlier-shared": "git+https://github.com/kararty/befriendlier-shared.git#d92741757fd66dbabbe4eb83232f68ab1850963f",
    "bulma": "^0.9.3",
    "feather-icons": "^4.29.0",
    "node-sass": "^7.0.1",
    "p-queue": "=6.6.2",
    "parcel": "2.4.1",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "secure-json-parse": "^2.4.0",
    "source-map-support": "^0.5.21",
    "uhtml": "^2.8.1",
    "ws": "^8.5.0",
    "yeast": "^0.1.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  }
}
