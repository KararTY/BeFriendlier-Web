{
  "name": "befriendlier-web",
  "version": "0.4.0",
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run build-server",
    "build-server": "node ace build --production",
    "build-css": "node-sass resources/sass/style.scss public/css/stylesheet.css --output-style compressed",
    "build-js": "parcel build resources/js/Index.ts --dist-dir public/js/ --detailed-report",
    "start": "node server.js",
    "dev": "node ace serve --watch --node-args=\"--inspect\"",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "migrate:rollback": "npm run build-server && node ace migration:rollback",
    "migrate:run": "npm run build-server && node ace migration:run",
    "seed": "npm run build-server && node ace db:seed",
    "m:s": "node ace migration:run && node ace db:seed",
    "r:m:s": "npm run build-server && node ace migration:rollback && node ace migration:run && node ace db:seed",
    "release": "standard-version",
    "update": "git pull && pnpm i --shamefully-hoist && npm run build && pm2 restart Web"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.3.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-adonis": "^1.3.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "pino-pretty": "^5.1.2",
    "sqlite3": "^5.0.2",
    "standard-version": "^9.3.1",
    "typescript": "^4.3.5",
    "youch": "^2.2.2",
    "youch-terminal": "^1.1.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.0.7",
    "@adonisjs/core": "^5.1.11",
    "@adonisjs/lucid": "^15.0.3",
    "@adonisjs/repl": "^3.1.5",
    "@adonisjs/session": "^6.1.1",
    "@adonisjs/shield": "^7.0.5",
    "@adonisjs/view": "^6.0.8",
    "@hapi/bourne": "^2.0.0",
    "@types/ws": "^7.4.7",
    "befriendlier-shared": "kararty/Befriendlier-Shared#ff78362075b977f92957a63b73d8e690883b34a4",
    "bulma": "^0.9.3",
    "feather-icons": "^4.28.0",
    "kontra": "^7.1.3",
    "node-sass": "^6.0.1",
    "p-queue": "^6.6.2",
    "parcel": "^2.0.0-nightly.435",
    "pg": "^8.6.0",
    "phc-argon2": "^1.1.2",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "uhtml": "^2.7.6",
    "ws": "^7.5.3",
    "yeast": "^0.1.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.5"
  },
  "packageManager": "yarn@3.0.0"
}
